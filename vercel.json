{
  "builds": [
    {
      "src": "run.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": [
          "app/static/**",
          "app/templates/**",
          "app/data.py"
        ],
        "maxLambdaSize": "15mb"
      }
    },
    {
      "src": "app/static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/app/static/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/run.py"
    }
  ]
}
